<%= render '/shared/page_title',title: "Chef #{@chef.chefname}'s Profile"%>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef,size: 150%>
  </div>
</div>

<h4 align="center"><%= @chef.chefname%>'s recipes</h4>

<div align="center">
  <%= will_paginate @chef_recipes%>
</div>
<% @chef_recipes.each do |recipe|%>
  <div class="row">
    <div class="col-md-2">
      <section class=" chef_info center">
      <%= gravatar_for(recipe.chef,size: 120)%>
      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= link_to recipe.name.capitalize, recipe_path(recipe) %></h4>
      <p><%= truncate(recipe.description , lenght:150)%></p>
      <p>
        <span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at)%>ago</small></span>
      </p>
    </div>
  </div>
<%end%>
<div align="center">
  <%= will_paginate @chef_recipes%>
</div>